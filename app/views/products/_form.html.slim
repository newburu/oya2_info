= simple_form_for(@product) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.association :brand
    = f.input :name
    = f.file_field :images, multiple: true

  .form-actions
    = f.button :submit
